{
	"compilerOptions": {
		"target": "es5",
		"module": "ES2015",
		"declaration": true,
		"declarationDir": "./lib",
		"outDir": "./lib",
		"strict": true,
		"esModuleInterop": true,
		"baseUrl": "src",
		"moduleResolution": "node",
		"lib": [
			"dom",
			"es2017"
		]
	},
	"include": [
		"src"
	],
	"exclude": [
		"node_modules",
		"**/__tests__/*"
	]
}